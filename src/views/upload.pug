extends layout 

block content 
  if errorMessage 
    span Error: #{errorMessage}
  form(method="POST", action="/videos/upload")
    input(placeholder="Title", required, type="text", name="title", maxlength=60)
    input(placeholder="Description",  type="text", name="description", maxlength=140)
    input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
    input(type="submit", value="Upload Video")